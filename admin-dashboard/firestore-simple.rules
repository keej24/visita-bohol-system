rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // SIMPLIFIED RULES FOR INITIAL SETUP AND TESTING
    // Use this during development, then switch to firestore.rules for production
    
    // Allow authenticated users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to all church data (public information)
    // Allow write access to authenticated users (for now)
    match /churches/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to manage parishes
    match /parishes/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to diocese information
    match /dioceses/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to create reports
    match /reports/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow feedback creation and reading
    match /feedback/{document=**} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Allow authenticated users to create logs
    match /logs/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow config access
    match /config/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
