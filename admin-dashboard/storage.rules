rules_version = '2';

// Firebase Storage Security Rules for VISITA System
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function getUserDiocese() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.diocese;
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidDocumentType() {
      return request.resource.contentType.matches('(application/pdf|image/.*|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document)');
    }
    
    // Broader validation for the church import feature which accepts
    // text, PDF, DOCX, images, and OCR sources. Also allows zip/octet-stream
    // since some browsers report .docx files with those MIME types.
    function isValidImportType() {
      return request.resource.contentType.matches('(application/pdf|image/.*|application/msword|application/vnd.openxmlformats.*|text/.*|application/octet-stream|application/zip|application/x-zip-compressed)');
    }
    
    function isChanceryOffice() {
      return isAuthenticated() && getUserRole() == 'chancery_office';
    }
    
    function isMuseumResearcher() {
      return isAuthenticated() && getUserRole() == 'museum_researcher';
    }
    
    function isParishSecretary() {
      return isAuthenticated() && getUserRole() == 'parish';
    }
    
    // Church images - publicly readable, restricted write
    match /churches/{churchId}/images/{imageId} {
      // Public read access for church images
      allow read: if true;
      
      // Parish secretaries and chancery can upload images for churches in their diocese
      allow write: if (isParishSecretary() || isChanceryOffice()) &&
                      isValidImageType() &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      firestore.get(/databases/(default)/documents/churches/$(churchId)).data.diocese == getUserDiocese();
      
      // Museum researchers can upload heritage documentation images
      allow write: if isMuseumResearcher() &&
                      isValidImageType() &&
                      request.resource.size < 10 * 1024 * 1024;
    }
    
    // 360-degree images for virtual tours
    match /churches/{churchId}/360tours/{imageId} {
      // Public read access for virtual tours
      allow read: if true;
      
      // Parish secretaries and chancery can upload 360 images
      // Note: churchId in storage may be sanitized (spaces replaced with underscores)
      // We allow write for authenticated parish/chancery users
      allow write: if (isParishSecretary() || isChanceryOffice()) &&
                      isValidImageType() &&
                      request.resource.size < 50 * 1024 * 1024; // 50MB limit for 360 images
    }
    
    // Church documents (historical documents, certificates, etc.)
    match /churches/{churchId}/documents/{documentId} {
      // Public read access for church documents
      allow read: if true;
      
      // Parish secretaries and chancery can upload documents
      allow write: if (isParishSecretary() || isChanceryOffice()) &&
                      isValidDocumentType() &&
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit for documents
      
      // Allow deletion
      allow delete: if isParishSecretary() || isChanceryOffice();
    }

    // Church import files (document parsing)
    // Note: The churchId in the storage path may not correspond to an existing
    // Firestore document yet (e.g., during initial church creation). We validate
    // access based on the user's role rather than cross-referencing the church
    // document, since the Cloud Function uses admin SDK for actual processing.
    match /churches/{churchId}/imports/{fileId} {
      // Restrict reads to authenticated parish staff and chancery office
      // Cannot check diocese against church doc because the church may not exist yet
      allow read: if isParishSecretary() || isChanceryOffice();

      // Parish secretaries and chancery can upload import documents
      // Uses broader type check to support text, PDF, DOCX, and image imports
      allow write: if (isParishSecretary() || isChanceryOffice()) &&
                      isValidImportType() &&
                      request.resource.size < 20 * 1024 * 1024; // 20MB limit
    }

    // Church import draft files (before churchId is assigned)
    // Note: Draft paths (churches/draft_<uid>/imports/...) are covered by
    // the general imports rule above for writes. The Cloud Function uses
    // admin SDK for reads during parsing, so no client-side read rule needed.
    
    // Legacy document path - kept for backward compatibility
    match /documents/{churchId}/{documentId} {
      // Public read access
      allow read: if true;
      
      // Parish secretaries and chancery can upload documents
      allow write: if (isParishSecretary() || isChanceryOffice()) &&
                      isValidDocumentType() &&
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit
      
      // Allow deletion
      allow delete: if isParishSecretary() || isChanceryOffice();
    }
    
    // Heritage documents - restricted access
    match /heritage/{churchId}/documents/{documentId} {
      // Museum researchers and chancery office can read heritage documents
      allow read: if isMuseumResearcher() || 
                     (isChanceryOffice() && 
                      firestore.get(/databases/(default)/documents/churches/$(churchId)).data.diocese == getUserDiocese());
      
      // Museum researchers can upload heritage documents
      allow write: if isMuseumResearcher() &&
                      isValidDocumentType() &&
                      request.resource.size < 100 * 1024 * 1024; // 100MB limit for documents
      
      // Chancery office can upload heritage documents for their diocese
      allow write: if isChanceryOffice() &&
                      isValidDocumentType() &&
                      request.resource.size < 100 * 1024 * 1024 &&
                      firestore.get(/databases/(default)/documents/churches/$(churchId)).data.diocese == getUserDiocese();
    }
    
    // User profile images (new path structure)
    match /profile_images/{imageId} {
      // Anyone can read profile images (public access)
      allow read: if true;

      // Authenticated users can upload/delete their own profile images
      // Allow write for authenticated users (validation happens in app)
      allow write: if isAuthenticated() &&
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit (increased)

      // Allow deletion of own profile image
      allow delete: if isAuthenticated();
    }

    // User profile images (old path structure - kept for backward compatibility)
    match /users/{userId}/profile/{imageId} {
      // Users can read and write their own profile images
      allow read, write: if isAuthenticated() &&
                            request.auth.uid == userId &&
                            isValidImageType() &&
                            request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Feedback images uploaded by public users (old path structure)
    match /feedback/{feedbackId}/images/{imageId} {
      // Anyone can read feedback images (for approved feedback)
      allow read: if true;
      
      // Authenticated users can upload feedback images
      allow write: if isAuthenticated() &&
                      isValidImageType() &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      firestore.get(/databases/(default)/documents/feedback/$(feedbackId)).data.userId == request.auth.uid;
    }
    
    // Feedback photos (new path structure used by mobile app)
    match /feedback_photos/{churchId}/{imageId} {
      // Anyone can read feedback photos (public access)
      allow read: if true;
      
      // Anyone can upload feedback photos (for public reviews)
      allow write: if isValidImageType() &&
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Announcement images
    match /announcements/{announcementId}/images/{imageId} {
      // Public read access for announcement images
      allow read: if true;
      
      // Parish secretaries and chancery can upload announcement images
      allow write: if (isParishSecretary() || isChanceryOffice()) &&
                      isValidImageType() &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      firestore.get(/databases/(default)/documents/announcements/$(announcementId)).data.diocese == getUserDiocese();
    }
    
    // Diocese logos - for report branding
    match /logos/diocese/{dioceseId}/{logoFile} {
      // Public read access for logos (needed in reports)
      allow read: if true;
      
      // Only chancery office can upload/update their diocese logo
      allow write: if isChanceryOffice() &&
                      getUserDiocese() == dioceseId &&
                      isValidImageType() &&
                      request.resource.size < 2 * 1024 * 1024; // 2MB limit for logos
      
      allow delete: if isChanceryOffice() && getUserDiocese() == dioceseId;
    }
    
    // Parish logos - for report branding
    match /logos/parish/{parishId}/{logoFile} {
      // Public read access for logos (needed in reports)
      allow read: if true;
      
      // Parish secretaries can upload their own parish logo
      allow write: if isParishSecretary() &&
                      isValidImageType() &&
                      request.resource.size < 2 * 1024 * 1024; // 2MB limit for logos
      
      // Chancery office can manage any parish logo in their diocese
      allow write: if isChanceryOffice() &&
                      isValidImageType() &&
                      request.resource.size < 2 * 1024 * 1024;
      
      allow delete: if isParishSecretary() || isChanceryOffice();
    }

    // Report exports (PDF/Excel files)
    match /reports/{dioceseId}/exports/{reportId} {
      // Only chancery office can read/write reports for their diocese
      allow read, write: if isChanceryOffice() && 
                            getUserDiocese() == dioceseId &&
                            request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Temporary uploads (for processing)
    match /temp/{userId}/{fileId} {
      // Users can manage their own temporary uploads
      allow read, write: if isAuthenticated() && 
                            request.auth.uid == userId &&
                            request.resource.size < 100 * 1024 * 1024; // 100MB limit
      
      // Auto-delete after 24 hours (handled by Cloud Functions)
    }
    
    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
